@model CityModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>City</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Districts)
        </dt>
        <dd class="col-10">
            @for (var i = 0; i < Model.Districts.Count; i++)
            {
                <text>@(i + 1)- @Model.Districts[i].Name</text>
                <br />
            }
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Hospitals)
        </dt>
        <dd class="col-10">
            @for (var i = 0; i < Model.Hospitals.Count; i++)
            {
                <text>@(i + 1)- @Model.Hospitals[i].Name</text>
                <br />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
	@Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Yes" class="btn btn-danger" />&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-success">No</a>
    </form>
</div>



