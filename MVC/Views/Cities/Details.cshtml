@model CityModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@* @{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1> *@

<div>
    <a class="btn btn-info">City Details</a>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Districts)
        </dt>
        <dd class="col-10">
            @for (var i = 0; i < Model.Districts.Count; i++)
            {
                <text>@(i + 1)- @Model.Districts[i].Name</text>
                <br />
            }
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Hospitals)
        </dt>
        <dd class="col-10">
            @for (var i = 0; i < Model.Hospitals.Count; i++)
            {
                <text>@(i + 1)- @Model.Hospitals[i].Name</text>
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a class="btn btn-outline-primary" asp-action="Index">Back to City List</a>
</div>



