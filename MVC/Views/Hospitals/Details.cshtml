<div>
    <a class="btn btn-info">Hospital Details</a>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.CityDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.CityDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.DistrictDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.DistrictDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Doctors)
        </dt>
        <dd class="col-10">
            @foreach (var doctor in Model.Doctors)
            {
                <text>@doctor.NameSurname</text>
                <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a class="btn btn-outline-primary" asp-action="Index">Back to Hospital List</a>
</div>



